{
  "manifest_version": 3,
  "name": "Web Scraper to JSONL",
  "version": "1.0",
  "description": "Scrape content from a webpage and save it to JSONL files",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"]
    }
  ]
}