{
  "manifest_version": 3,
  "name": "Web Scraper to JSON",
  "version": "1.0",
  "description": "Scrape content from a webpage and send it to localhost",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "http://localhost:9898/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "goose_icon.txt"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"]
    }
  ],
  "icons": {
    "16": "goose_icon.txt",
    "48": "goose_icon.txt",
    "128": "goose_icon.txt"
  }
}